[user]
	name = luk-pio
	email = 48261254+luk-pio@users.noreply.github.com
[core]
	autocrlf = input
	pager = delta
[init]
	defaultBranch = main
[credential]
	helper = cache
[alias]
fza = "!git ls-files -m -o --exclude-standard | fzf --print0 -m | xargs -0 -t -o git add"
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[interactive]
	diffFilter = delta --color-only
[delta]
	navigate = true
	side-by-side = true
	line-numbers = true
[merge]
	conflictstyle = diff3
[diff]
	colorMoved = default
