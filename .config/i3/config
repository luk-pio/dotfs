for_window [class="^.*"] border pixel 0

gaps inner 10
gaps outer 10
set $term --no-startup-id $TERMINAL
set $mod Mod4

default_border normal

set_from_resource $magenta_light i3wm.color6
set_from_resource $magenta_dark i3wm.color14

set_from_resource $green_dark i3wm.color2
set_from_resource $green_light i3wm.color10

set_from_resource $red_dark i3wm.color1
set_from_resource $red_light i3wm.color9

# class                 border  backgr. text    indicator child_border
client.focused          $green_light $green_light $green_light $green_light $green_light
client.focused_inactive #333333 #5f676a #ffffff #484e50   #5f676a
client.unfocused        $magenta_dark $magenta_dark $magenta_dark $magenta_dark   $magenta_dark
client.urgent           #2f343a #900000 #ffffff #900000   #900000
client.placeholder      #000000 #0c0c0c #ffffff #000000   #0c0c0c

font xft:Hack Nerd Font Mono:pixelsize=24:true:hinting=true


# For toggling the split layout with each new window
default_orientation vertical #start in opposite orientation from your monitor
for_window [class=".*"] split toggle #toggles split at each new window
# kill focused window
bindsym $mod+Shift+q split toggle kill

# Custom keybindings
bindsym $mod+y gaps inner current set 0; gaps outer current set 0
bindsym $mod+Shift+y gaps inner current set 10; gaps outer current set 10

bindsym $mod+s			gaps inner current plus 10
bindsym $mod+Shift+s		gaps inner current minus 10

bindsym $mod+a			gaps outer current plus 10
bindsym $mod+Shift+a		gaps outer current minus 10

bindsym $mod+v split horizontal 
bindsym $mod+Shift+v split vertical

bindsym $mod+t layout toggle tabbed split

bindsym $mod+p focus parent
bindsym $mod+Shift+p focus child

bindsym $mod+m mark --toggle swappee
# bindsym $mod+Shift+m [con_mark="swappee"] focus
bindsym $mod+Shift+m swap container with mark swappee

# bindsym $mod+v swap container with mark swappee

# Focus browser
bindsym $mod+i [class="qutebrowser"] focus 

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# start a terminal
bindsym $mod+Return exec --no-startup-id "urxvt"


# start dmenu (a program launcher)
bindsym $mod+space exec rofi -show run
bindsym $mod+Tab exec rofi -show window

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# #---Arrow Keys---# #
bindsym $mod+Left		focus left
bindsym $mod+Down		focus down
bindsym $mod+Up			focus up
bindsym $mod+Right 		focus right

bindsym $mod+Shift+Left		move left
bindsym $mod+Shift+Down		move down
bindsym $mod+Shift+Up		move up
bindsym $mod+Shift+Right 	move right

bindsym $mod+Ctrl+Right		move workspace to output right
bindsym $mod+Ctrl+Left		move workspace to output left

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+z floating toggle

# change focus between tiling / floating windows
bindsym $mod+z focus mode_toggle

